<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.wangenyong.weytest.activities.GuideActivity">

    <RelativeLayout
        android:id="@+id/blurredview_guideview"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.wangenyong.mylibrary.views.CircularImageView
            android:id="@+id/header_guideview"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="64dp"
            android:src="@drawable/img_header_guideview"/>

        <TextView
            android:id="@+id/tv_say_guideview"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/primary_text"
            android:textSize="24sp"
            android:text="@string/guideview_say"
            android:layout_centerInParent="true"/>

    </RelativeLayout>

    <com.wangenyong.mylibrary.views.BlurringView
        android:id="@+id/blurringView_guideview"
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:layout_alignParentBottom="true"
        app:blurRadius="11"
        app:downsampleFactor="6"
        app:overlayColor="#99FFFFFF"/>

    <android.support.v4.view.ViewPager
        android:id="@+id/viewpager_guideview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        ></android.support.v4.view.ViewPager>

</RelativeLayout>
