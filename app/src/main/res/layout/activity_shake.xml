<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/light_primary_color"
    tools:context="com.wangenyong.weytest.activities.ShakeActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar_shake"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/primary_color"
        app:theme="@style/WEYLibraryThemeToolbarDarkOverflow"
        app:popupTheme="@style/ThemeOverlay.AppCompat.Light"
        android:layout_alignParentTop="true"
        />

    <TextView
        android:id="@+id/tv_shake"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="28sp"
        android:text="@string/tools_shake_back_text"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/img_shake"
        android:layout_marginTop="16dp"/>

    <ImageView
        android:id="@+id/img_shake"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:src="@drawable/ic_smile" />

</RelativeLayout>
