<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.wangenyong.weytest" >

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:launchMode="singleTask" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".activities.ViewsActivity"
            android:label="@string/title_activity_buttons"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".activities.TmpActivity"
            android:label="@string/title_activity_tmp"
            android:parentActivityName=".MainActivity" >
        </activity>
        <activity
            android:name=".activities.ShakeActivity"
            android:parentActivityName=".MainActivity"
            android:screenOrientation="portrait"
            android:label="@string/title_activity_shake" >
        </activity>
    </application>

</manifest>
